{
  "name": "frontend",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "postinstall": "patch-package",

    "build": "rm -Rf node_modules/.cache/imagetools/ && vite build && rm -R build/client/_dev/ && echo '' > build/shims.js && npm run build:postprocess",
    "build:dev": "vite build --mode developemt --minify false && npm run build:postprocess",
    "build:postprocess": "rm build/index.js && node inject-apollo-into-handler.mjs",

    "dev": "vite dev",
    "preview": "vite preview",

    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch"
  },
  "dependencies": {
    "@iconify-json/logos": "^1.2.4",
    "@iconify-json/tabler": "^1.2.19",
    "bootstrap": "^5.3.7",
    "hls.js": "^1.6.7",
    "jassub": "^1.8.6"
  },
  "devDependencies": {
    "@sveltejs/adapter-node": "^5.2.13",
    "@sveltejs/enhanced-img": "^0.7.0",
    "@sveltejs/kit": "^2.25.1",
    "@sveltejs/vite-plugin-svelte": "^6.1.0",
    "patch-package": "^8.0.0",
    "svelte": "^5.36.8",
    "svelte-check": "^4.3.0",
    "typescript": "^5.8.3",
    "unplugin-icons": "^22.1.0",
    "vite": "^7.0.5"
  }
}
