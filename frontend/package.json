{
  "name": "frontend",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "postinstall": "patch-package",

    "build": "rm -Rf node_modules/.cache/imagetools/ && vite build && rm -R build/client/_dev/ && echo '' > build/shims.js && npm run build:postprocess",
    "build:dev": "vite build --mode developemt --minify false && npm run build:postprocess",
    "build:postprocess": "rm build/index.js && node inject-apollo-into-handler.mjs",

    "dev": "vite dev",
    "preview": "vite preview",

    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch"
  },
  "dependencies": {
    "bootstrap": "^5.3.6",
    "hls.js": "^1.6.2",
    "material-design-icons-iconfont": "^6.7.0"
  },
  "devDependencies": {
    "@sveltejs/adapter-node": "^5.2.12",
    "@sveltejs/enhanced-img": "^0.6.0",
    "@sveltejs/kit": "^2.21.1",
    "@sveltejs/vite-plugin-svelte": "^5.0.3",
    "patch-package": "^8.0.0",
    "svelte": "^5.33.2",
    "svelte-check": "^4.2.1",
    "typescript": "^5.8.3",
    "vite": "^6.3.5"
  }
}
